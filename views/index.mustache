<header>
  <h1>Stuff I Gotta Do</h1>
</header>
<div class="entryform">
  <form class="" action="/" method="post">
    <input type="text" name="task" placeholder="add a task">
    <button type="submit" name="button">Add to List</button>
  </form>
</div>
<div class="container">
  <h3>My "To Do" List</h3>
    {{#todo}}
      {{^complete}}
        <ul>
          <li>{{task}} <br><a href="/complete/{{id}}" >Complete</a><br><a href="/edit/{{id}}" >Edit</a><br><a href="/delete/{{id}}" >Delete</a></li>
        </ul>
      {{/complete}}
    {{/todo}}
  <h3>My "Done" List</h3>
  {{#todo}}
    {{#complete}}
      <ul>
        <li>{{task}}</li>
      </ul>
    {{/complete}}
  {{/todo}}
</div>
